{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "url": "https://covid.ourworldindata.org/data/owid-covid-data.csv"
    },
    "transform": [
        { "filter": "datum.continent != ''" }
    ],
    "hconcat": [{
            "vconcat": [{
                "width": 600,
                "height": 300,
                "title": "Covid-19 Cases of the World",
                "projection": {
                    "type": "equalEarth"
                },
                "layer": [{

                        "data": {
                            "url": "https://raw.githubusercontent.com/KaneSec/vega_lite/main/2_symbol_map/js/ne_110m_admin_0_countries.topojson",
                            "format": {
                                "type": "topojson",
                                "feature": "ne_110m_admin_0_countries"
                            }
                        },
                        "transform": [{
                            "calculate": "'Data is not available in ' + datum.properties.NAME",
                            "as": "note"
                        }],
                        "mark": {
                            "type": "geoshape",
                            "fill": "#ddd",
                            "stroke": "white",
                            "strokeWidth": 1
                        },
                        "encoding": { "tooltip": { "field": "note" } }
                    },
                    {
                        "transform": [
                            { "filter": { "param": "time_brush" } },
                            {
                                "aggregate": [{
                                    "op": "sum",
                                    "field": "new_cases",
                                    "as": "sum_new_cases"
                                }],
                                "groupby": ["location", "iso_code", "continent"]
                            },
                            { "filter": "datum.sum_new_cases > 0 " },
                            {
                                "lookup": "iso_code",
                                "from": {
                                    "data": {
                                        "url": "https://raw.githubusercontent.com/KaneSec/vega_lite/main/2_symbol_map/js/ne_110m_admin_0_countries.topojson",
                                        "format": {
                                            "type": "topojson",
                                            "feature": "ne_110m_admin_0_countries"
                                        }
                                    },
                                    "key": "properties.ADM0_A3_IS"
                                },
                                "as": "geo"
                            }
                        ],
                        "mark": { "type": "geoshape", "stroke": "#fff", "strokeWidth": 0.5 },
                        "encoding": {
                            "shape": { "field": "geo", "type": "geojson" },
                            "color": {
                                "field": "sum_new_cases",
                                "type": "quantitative",
                                "scale": {
                                    "type": "log",
                                    "scheme": "orangered"
                                },
                                "legend": { "title": "Sum of New Cases" }
                            },

                            "opacity": {
                                "condition": { "param": "continent_highlight", "value": 1 },
                                "value": 0.2
                            },
                            "tooltip": [
                                { "field": "location", "type": "nominal", "title": "Country" },
                                {
                                    "field": "sum_new_cases",
                                    "type": "quantitative",
                                    "title": "Total New Cases",
                                    "format": ","
                                }
                            ]
                        }
                    }
                ]
            }, {
                "width": 600,
                "height": 300,
                "params": [{
                        "name": "time_brush",
                        "select": { "type": "interval", "encodings": ["x"] }
                    },
                    {
                        "name": "continent_highlight",
                        "select": { "type": "point", "fields": ["continent"] },
                        "bind": "legend"
                    }

                ],
                "mark": { "type": "area", "cornerRadiusTopLeft": 3, "cornerRadiusTopRight": 3 },
                "encoding": {
                    "x": {
                        "timeUnit": "yearweek",
                        "field": "date",
                        "type": "temporal",
                        "axis": { "title": "", "format": "%b-%y", "tickCount": { "interval": "month", "step": 3 } }
                    },
                    "y": {
                        "aggregate": "sum",
                        "field": "new_cases",
                        "axis": { "title": "Sum of New Cases" }
                    },

                    "color": {
                        "field": "continent",
                        "type": "nominal",
                        "legend": { "title": "Continent" },
                        "scale": {
                            "domain": [
                                "North America",
                                "South America",
                                "Europe",
                                "Africa",
                                "Asia",
                                "Oceania"
                            ],
                            "range": [
                                "#d9d9d9",
                                "#bebada",
                                "#fb8072",
                                "#80b1d3",
                                "#fdb462",
                                "#b3de69"
                            ]
                        }
                    },
                    "opacity": {
                        "condition": { "param": "continent_highlight", "value": 1 },
                        "value": 0.2
                    }

                }
            }]
        },
        {
            "width": 400,
            "height": 628,
            "view": {
                "stroke": "transparent"
            },
            "title": "Top 30 Countries with Most Covid-cases",
            "transform": [
                { "filter": { "param": "time_brush" } },
                { "filter": { "param": "continent_highlight" } },
                {
                    "aggregate": [{
                        "op": "sum",
                        "field": "new_cases",
                        "as": "sum_new_cases"
                    }],
                    "groupby": ["location", "iso_code", "continent"]
                },
                {
                    "window": [{
                        "op": "rank",
                        "as": "rank"
                    }],
                    "sort": [{ "field": "sum_new_cases", "order": "descending" }]
                }, {
                    "filter": "datum.rank <= 30"
                },
                {
                    "filter": "datum.sum_new_cases > 0 "
                }
            ],
            "encoding": {
                "x": {
                    "field": "sum_new_cases",
                    "type": "quantitative",
                    "axis": { "title": "Sum of New Cases", "grid": false }
                },
                "y": {
                    "field": "location",
                    "type": "nominal",
                    "sort": { "field": "sum_new_cases", "op": "average", "order": "descending" },
                    "axis": { "title": "" }
                }
            },
            "layer": [{
                    "mark": "bar",
                    "encoding": {
                        "color": {
                            "field": "continent",
                            "type": "nominal",
                            "scale": {
                                "domain": [
                                    "North America",
                                    "South America",
                                    "Europe",
                                    "Africa",
                                    "Asia",
                                    "Oceania"
                                ],
                                "range": [
                                    "#d9d9d9",
                                    "#bebada",
                                    "#fb8072",
                                    "#80b1d3",
                                    "#fdb462",
                                    "#b3de69"
                                ]
                            },
                            "legend": null
                        }
                    }
                },
                {
                    "mark": {
                        "type": "text",
                        "align": "left",
                        "baseline": "middle",
                        "dx": 3
                    },
                    "encoding": {
                        "text": {
                            "field": "sum_new_cases",
                            "type": "quantitative",
                            "format": ","
                        }
                    }
                }
            ]

        }
    ],

    "config": {

    }
}